{% extends 'base.html.twig' %}

{% block title %}MyBookApp - Login{% endblock %}

{% block body %}
    <div class="container">
        <h1 class='mt-4'>Login form</h1>

        <form action="{{ path('security.login') }}" method="post">
            <div class="form-group">
                <label for="username" class="form-label mt-4">Email address</label>
                <input type="email" class="form-control" id="username" aria-describedby="emailHelp" name="_username" placeholder="exemple@mail.com">
                <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else. <small>
            </div>
            <div class="form-group">
              <label for="password" class="form-label mt-4">Password</label>
              <input type="password" class="form-control" id="password" name="_password" placeholder="********">
            </div>

            <button type="submit" class="btn btn-primary mt-4">Login</button>
        </form>
    </div>
{% endblock %}
